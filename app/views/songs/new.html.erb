<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <section class="song_title">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </section>
  <br />
  <section class="artist_name">
    <%= f.label :artist_name%>
    <%= f.text_field :artist_name %>
  </section>
  <br />
  <section class="genre_name">
   <%= f.label :genre_id%>
   <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  </section>
  <br>
  <section class="notes">
  <input name="song[note_content][]" id="song_notes_1">
  <input name="song[note_content][]" id="song_notes_2">
  <input name="song[note_content][]" id="song_notes_3">
  </section>
  <br>
  <section class="submit_button">
  <%= f.submit %>
  </section>
<% end %>


